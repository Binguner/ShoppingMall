<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seckill_item_cons_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/seckill_item_iv_itempic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/atguigu_logo" />

    <TextView
        android:id="@+id/seckill_item_tv_nowprice"
        app:layout_constraintTop_toBottomOf="@id/seckill_item_iv_itempic"
        tools:text="¥ 20.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/seckill_item_tv_oldprice"
        app:layout_constraintTop_toBottomOf="@id/seckill_item_tv_nowprice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="¥ 20.00"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/seckill_item_tv_oldprice"
        android:layout_marginTop="2dp"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/seckill_item_tv_oldprice"
        app:layout_constraintStart_toStartOf="@id/seckill_item_tv_oldprice"
        app:layout_constraintEnd_toEndOf="@id/seckill_item_tv_oldprice"
        android:layout_height="1dp" />

</android.support.constraint.ConstraintLayout>