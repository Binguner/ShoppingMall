<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hot_item_iv_icon"
        android:src="@mipmap/atguigu_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <TextView
        android:id="@+id/hot_item_tv_name"
        app:layout_constraintStart_toStartOf="@id/hot_item_iv_icon"
        app:layout_constraintEnd_toEndOf="@id/hot_item_iv_icon"
        app:layout_constraintTop_toBottomOf="@id/hot_item_iv_icon"
        android:lines="2"
        android:ellipsize="end"
        android:text="【智趣屋】DIY小屋盒子剧场 手工拼装房子 模型玩具创意礼品 送工具"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hot_item_tv_price"
        app:layout_constraintTop_toBottomOf="@id/hot_item_tv_name"
        app:layout_constraintStart_toStartOf="@id/hot_item_iv_icon"
        android:layout_marginStart="10dp"
        android:text="￥88.00"
        android:textColor="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>